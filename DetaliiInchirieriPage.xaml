<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Farcas_Gherghelas_mobil.DetaliiInchirieriPage"
             Title="DetaliiInchirieriPage">
    <ContentPage.Content>
        

        <StackLayout Margin="20">
            <Image Source="poza_partie.jpg"
            SemanticProperties.Description="Inchirierile mele"
            HeightRequest="64" />
            <Label FontSize="22" VerticalOptions="End" />
            <Label Text="Detalii punct de inchiriere" />
       
              <Label  Text="{Binding Magazin}" />
                <Label  Text="{Binding Locatie}" />
                <Label  Text="{Binding Contact}" />
                <Label  Text="{Binding Partie}" />
            

            <Label Text="Detalii echipament" />
            
             <Label  Text="{Binding TipProdus}" />
            <Label  Text="{Binding Marime}" />
            <Label  Text="{Binding Inaltime}" />
            <Label  Text="{Binding Pret}" />


            <Label Text="Data si ora de preluare a echipamentului" />
            <Label Text="{Binding Data}" />
            <Label  Text="{Binding Ora}" />
            <Label Text="{Binding NrOre}" />
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>